{% extends 'base.html.twig' %}

{% block title %}Connexion | OnlyWeed{% endblock %}

{% block body %}
    <style>
        /* Style pour la page de connexion */
        .login-container {
            max-width: 420px;
            margin: 50px auto;
            padding: 30px;
            border-radius: 12px;
            background: #ffffff;
            box-shadow: 0 0 20px rgba(34, 139, 34, 0.2);
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #2e7d32;
        }

        .form-label {
            color: #2e7d32;
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 2px solid #2e7d32;
            border-radius: 6px;
        }

        .btn-login {
            width: 100%;
            padding: 12px;
            background-color: #2e7d32;
            border: none;
            color: #fff;
            font-weight: bold;
            border-radius: 6px;
            transition: background-color 0.3s ease;
        }

        .btn-login:hover {
            background-color: #1b5e20;
        }
    </style>

    <div class="login-container">
        <h2>Se connecter</h2>

        {{ form_start(form) }}
            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.password, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.remember_me, {'attr': {'class': 'form-check-input'}}) }}
            <button type="submit" class="btn-login">Se connecter</button>
        {{ form_end(form) }}

        {# Afficher un message d'erreur si nécessaire #}
        {% if error %}
            <div class="alert alert-danger mt-3">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <p>Pas encore inscrit ? <a href="{{ path('app_register') }}">Créer un compte</a></p>
    </div>
{% endblock %}
