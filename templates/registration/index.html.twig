{% extends 'base.html.twig' %}

{% block title %}Inscription | OnlyWeed{% endblock %}

{% block body %}
    <style>
        .register-container {
            max-width: 420px;
            margin: 50px auto;
            padding: 30px;
            border-radius: 12px;
            background: #ffffff;
            box-shadow: 0 0 20px rgba(34, 139, 34, 0.2);
            font-family: 'Segoe UI', sans-serif;
        }

        .register-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #2e7d32;
        }

        .form-label {
            color: #2e7d32;
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 2px solid #2e7d32;
            border-radius: 6px;
        }

        .btn-register {
            width: 100%;
            padding: 12px;
            background-color: #2e7d32;
            border: none;
            color: #fff;
            font-weight: bold;
            border-radius: 6px;
            transition: background-color 0.3s ease;
        }

        .btn-register:hover {
            background-color: #1b5e20;
        }

        .text-center {
            text-align: center;
            margin-top: 15px;
        }

        .text-center a {
            color: #2e7d32;
            font-weight: bold;
            text-decoration: none;
        }

        .text-center a:hover {
            text-decoration: underline;
        }
    </style>

    <div class="register-container">
        <h2>Créer un compte</h2>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Mot de passe',
                'attr': {'class': 'form-control'}
            }) }}
            <button type="submit" class="btn-register">S'inscrire</button>
        {{ form_end(registrationForm) }}

        <div class="text-center">
            <p>Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
        </div>
    </div>
{% endblock %}
